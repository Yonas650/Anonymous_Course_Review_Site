<form action="/reviews/add" method="POST" class="review-form">
    <label for="courseNumber">Course Number:</label>
    <input type="text" name="courseNumber" id="courseNumber" placeholder="Course Number" required>

    <label for="courseName">Course Name:</label>
    <input type="text" name="courseName" id="courseName" placeholder="Course Name" required>

    <label for="semester">Semester:</label>
    <select name="semester" id="semester" required>
        <option value="Fall">Fall</option>
        <option value="Spring">Spring</option>
        <option value="Summer">Summer</option>
        <option value="Winter">Winter</option>
    </select>

    <label for="year">Year:</label>
    <input type="number" name="year" id="year" placeholder="Year" required>

    <label for="professor">Professor:</label>
    <input type="text" name="professor" id="professor" placeholder="Professor" required>

    <label for="review">Review:</label>
    <textarea name="review" id="review" rows="4" placeholder="Write your review here..." required></textarea>

    <button type="submit">Submit</button>
</form>
